#################################
# Create CUSTOM mode VPC network - managementnet
#################################
resource "google_compute_network" "managementnet" {
  name = "managementnet"
  project = var.project_id
  auto_create_subnetworks = "false"

}

resource "google_compute_subnetwork" "managementsubnet-us" {
  name          = "managementsubnet-us"
  ip_cidr_range = "10.240.0.0/20"
  region        = "us-west4"
  network       = google_compute_network.managementnet.id
}

resource "google_compute_firewall" "managementnet-allow-icmp-ssh-rdp" {
  name = "managementnet-allow-icmp-ssh-rdp"
  project = var.project_id
  network = google_compute_network.managementnet.self_link
  allow {
    protocol = "tcp"
    ports    = ["22", "3389"]
  }
  allow {
    protocol = "icmp"
  }
  source_ranges = ["0.0.0.0/0"]
}

# Create the managementnet-us-vm instance
module "managementnet-us-vm" {
  source           = "../instance"
  instance_type    = "e2-micro"
  instance_image   = "debian-cloud/debian-11"
  instance_name    = "managementnet-us-vm"
  instance_zone    = "us-west4-c"
  instance_network = google_compute_network.managementnet.self_link
  instance_subnetwork = google_compute_subnetwork.managementsubnet-us.self_link
}

#################################
# Create custom mode VPC network - privatenet
#################################
resource "google_compute_network" "privatenet" {
  name = "privatenet"
  project = var.project_id
  auto_create_subnetworks = "false"
